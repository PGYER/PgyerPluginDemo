            android:theme="@android:style/Theme.DeviceDefault.NoActionBar"
            android:windowSoftInputMode="adjustResize" >
            <intent-filter android:label="@string/launcher_name" >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="PGYER_APPID"
            android:value="08178635e8bbdcab4798c9df27599965" />

        <activity android:name="com.pgyersdk.feedback.FeedbackActivity" />

        <provider
            android:name="com.pgyersdk.PgyerProvider"
            android:authorities="com.pgyer.cordova.demo.com.pgyer.provider"
            android:exported="false" />
        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.pgyer.cordova.demo.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>